@model List<ApplicationUser>

@{
    ViewData["Title"] = "Index";
}

<br />
<br />

<p>
    @*<a class="pridat-tlacitko" asp-action="Create">Přidat potravinu</a>*@
</p>
<table id="razeni" class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Email
            </th>
            <th>
                Jméno
            </th>
            <th>
                Příjmení
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
@*                    <a asp-action="Edit" class="pridat-tlacitko" asp-route-id="@item.Id">Upravit</a> |*@
                    <a asp-action="Delete" class="pridat-tlacitko" asp-route-id="@item.Id">Smazat</a>
                </td>
            </tr>
        }
    </tbody>
</table>




