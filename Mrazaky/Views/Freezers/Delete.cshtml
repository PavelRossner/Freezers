@model Mrazaky.Models.Freezer

@{
    ViewData["Title"] = "Delete";
}

<div>
<h4>Opravdu chcete mrazák smazat? <strong><span style="color:red;">Při této akci budou odstraněna veškera související s daným mrazákem.</span></strong></h4>
    <br />
    <h3>Pokud chcete informace o potravinách v mrazáku uchovat, zálohujte je, nebo uložte do jiného mrazáku.</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FreezerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FreezerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfShelves)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfShelves)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastDefrosted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastDefrosted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DefrostInterval)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DefrostInterval)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="FreezerId" />
        <input type="submit" value="Smazat" class="add-button" /> |
        <a asp-action="Index" class="add-button">Zpět na seznam</a>
    </form>
</div>
