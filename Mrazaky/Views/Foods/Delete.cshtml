    <form asp-action="Delete">
        <input type="hidden" asp-for="FoodId" />
        <input type="submit" value="Smazat" class="pridat-tlacitko" /> |
        <a asp-action="Index" class="pridat-tlacitko">Zpět na seznam</a>
