<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mrazaky</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mrazaky.styles.css" asp-append-version="true" />

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css">

       
</head>
<body>
    <header class="container-fluid">
        <div class="row">
            <div class="col d-flex align-items-center justify-content-end">

                <nav class="navbar navbar-expand-lg navbar-dark py-0">

                    <button class="navbar-toggler my-3 responzivnitlacitko" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse text-nowrap" id="navbarSupportedContent">

                        <ul class="navbar-nav mr-auto d-flex align-items-center">

                            <li class="nav-item navbar-underline"><a asp-controller="Home" asp-action="Index" id="barva">Úvod</a></li>
                            <li class="nav-item navbar-underline"><a asp-controller="Foods" asp-action="Index" id="barva">Potraviny</a></li>
                            <li class="nav-item navbar-underline"><a asp-controller="Freezers" asp-action="Index" id="barva">Mrazáky</a></li>

                            <li class="nav-item dropdown">
                                <div class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" id="barva">
                                    Správa uživatelů
                                </div>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Login" id="barva">Přihlášení</a>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Logout" id="barva">Odhlášení</a>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Register" id="barva">Registrovat</a>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Index" id="barva">Uživatelé</a>
                                </div>
                            </li>
                            <li class="nav-item" id="barva">
                                <a href="/Account/Login">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a>Přihlášen jako: </a>
                                        <span> @User.Identity.Name </span>
                                    }
                                </a>
                            </li>

                            <li class="nav-item px-2 navbar-underline"><a asp-controller="Home" asp-action="About" id="barva">O aplikaci</a></li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
